@model STP.Models.Office

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Office</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            Street
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2">
            Street number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetNumber)
        </dd>
        <dt class="col-sm-2">
            Is headquarters
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsHeadquarters)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Starting date</th>
                    <th>Salary</th>
                    <th>Vacation days</th>
                    <th>Experience level</th>
                </tr>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VacationDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>
                    </tr>
                }
            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
